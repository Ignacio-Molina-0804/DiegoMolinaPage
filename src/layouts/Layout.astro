---
import "../styles/global.css";
import "@fontsource/poppins";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const siteUrl = "https://diegomolina.ar";

import { useTranslations } from "../i18n/util";
import { languageList } from "../i18n/ui";

const currentLang = Astro.currentLocale || "es";
const t = useTranslations(currentLang as keyof typeof languageList);

const {
  title = t('home.titlePage'),
  description = t('home.descriptionPage'),
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={siteUrl} />

    <!-- OG / Twitter -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/logos/isotipoVerdeConFondo.webp" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={siteUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/logos/isotipoVerdeConFondo.webp" />

    <!-- Favicons -->
    <link rel="icon" href="/logos/isotipoVerde.png" type="image/png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/logos/isotipoVerde.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/logos/isotipoVerde.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/logos/isotipoVerde.png" />

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-32VJT8MWM4"></script>
    <script src="/scripts/gtag.js"></script>

  </head>

  <body class="flex flex-col min-h-screen text-white relative">
    <!-- Fondo -->
    <div class="pointer-events-none fixed inset-0 -z-10 bg-gradient"></div>

    <Header />

    <!-- Contenido principal que ocupa el espacio disponible -->
  <main class="flex-grow">
    <slot />
  </main>

    <Footer />
  </body>
</html>