---
import { useTranslations } from "../i18n/util";
import { languageList } from "../i18n/ui";

const currentLang = Astro.currentLocale || "es";
const t = useTranslations(currentLang as keyof typeof languageList);
---

<section class="relative py-16">
  <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 items-center px-4 gap-10 md:gap-8 pt-10">
    
    <!-- Texto -->
    <div set:html={t('home.hero.texto')}></div>

    <!-- Imagen -->
    <div class="flex justify-center md:justify-end relative">
      <img 
        src="/pageImages/diegoMolinaSentado.webp" 
        alt="Diego Molina" 
        class="w-[75%] sm:w-[65%] md:w-[280px] lg:w-[320px] xl:w-[360px] 2xl:w-[400px] max-h-[480px] object-contain"
      />
    </div>
  </div>
</section>
