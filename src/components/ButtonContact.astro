---
const {
  title = "¿Querés dar el primer paso hacia una nueva experiencia?",
  subtitle = "Hablemos y coordinemos tu primera toma de contacto.",
  buttonText = "Ir a Contacto",
  buttonLink = "/contacto",
} = Astro.props;
---

<section class="py-16">
  <div class="max-w-4xl mx-auto text-center px-6">
    <p class="text-xl sm:text-2xl md:text-3xl text-white mb-3 font-poppins font-semibold leading-snug">
      {title}
    </p>
    <p class="text-base sm:text-lg md:text-xl text-gray-300 mb-8 font-poppins max-w-2xl mx-auto leading-relaxed">
      {subtitle}
    </p>
    <a 
      href={buttonLink} 
      class="inline-block px-8 py-3 bg-[#00ff7f] text-gray-900 font-semibold rounded-xl shadow-lg hover:bg-[#00e670] transition-all duration-300 transform hover:scale-105 font-poppins"
    >
      {buttonText}
    </a>
  </div>
</section>
