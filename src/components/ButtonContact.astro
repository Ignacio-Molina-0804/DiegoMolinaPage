---
const {
  title = "¿Querés dar el primer paso hacia una nueva experiencia?",
  subtitle = "Hablemos y coordinemos tu primera toma de contacto.",
  buttonText = "Ir a Contacto",
  buttonLink = "/contacto",
} = Astro.props;
---

<section class="py-16">
  <div class="max-w-4xl mx-auto text-center px-6">
    <p class="text-lg md:text-xl text-white mb-1 font-poppins">
      {title}
    </p>
    <p class="text-lg md:text-xl text-white mb-6 font-poppins">
      {subtitle}
    </p>
    <a 
      href={buttonLink} 
      class="inline-block px-8 py-3 bg-[#00ff7f] text-gray-900 font-semibold rounded-xl shadow-lg hover:bg-[#00e670] transition-colors duration-300 font-poppins"
    >
      {buttonText}
    </a>
  </div>
</section>
